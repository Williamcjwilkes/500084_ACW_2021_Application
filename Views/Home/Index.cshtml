@model _500084_ACW_2021_Web_Application.Models.User_Model

<div class="container">
    <div class="d-flex justify-content-center h-100">
        <div class="card">
            <div class="card-body">
                <form asp-action="Login">
                    <div class="input-group form-group">
                        <label asp-for="Username" class="control-label"></label>
                        <input asp-for="Username" class="form-control" />
                        <span asp-validation-for="Username" id="uErrorMesage" class="text-danger"></span>
                    </div>
                    <div class="input-group form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" id="pErrorMesage" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="LOGIN" class="btn float-right login_btn">
                    </div>
                </form>
            </div>
            <div class="card-footer">
                <div class="d-flex justify-content-center links">
                    <a asp-action="CreateUser"> Don't have an account? Create one free</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
